<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/main_background"
    tools:context=".HomeFragment">


    <ScrollView
        android:id="@+id/scrView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/deleteViewInScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:backgroundTint="@color/bottom_nav_bg"
                android:text="Удалить"
                android:textColor="@color/text_color_button"
                android:textSize="20sp"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/bottom_nav_bg"
        android:gravity="bottom"
        android:onClick="createTextView"
        android:scaleType="fitStart"
        android:src="@drawable/ic_add_button"
        android:text="Добавить"
        android:textColor="@color/text_color_button"
        android:textSize="20sp"
        android:tooltipText="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994" />

    <Button
        android:id="@+id/dataPickerButton"
        style="?android:spinnerStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="01.01.2024"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addButton"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/createTaskPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bottom_nav_bg"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color_button"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dateTaskInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/backTaskButton"
            android:background="@color/edit_text"
            android:hint="Дата"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="@color/text_color_button" />

        <EditText
            android:id="@+id/timeTaskInout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTaskInput"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Время"
            android:inputType="time"
            android:padding="10dp"
            android:textColor="@color/text_color_button" />

        <EditText
            android:id="@+id/nameTaskInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTaskInout"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Название"
            android:padding="10dp"
            android:textColor="@color/text_color_button" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTaskInput">

            <RelativeLayout
                android:id="@+id/pointsPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/panel_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/point0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/edit_text"
                    android:hint="Пункт"
                    android:padding="10dp"
                    android:textColor="@color/text_color_button" />

                <Button
                    android:id="@+id/addNewPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_alignEnd="@id/point0"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/bottom_nav_bg"
                    android:padding="10dp"
                    android:text="Добавить пункт"
                    android:textColor="@color/text_color_button"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/deletePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@id/addNewPoint"
                    android:backgroundTint="@color/bottom_nav_bg"
                    android:padding="10dp"
                    android:text="Удалить пункт"
                    android:textColor="@color/text_color_button"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/saveTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_alignStart="@id/point0"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/bottom_nav_bg"
                    android:padding="10dp"
                    android:text="Сохранить"
                    android:textColor="@color/text_color_button"
                    android:textSize="15sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createEventPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bottom_nav_bg"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color_button"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/backEventButton"
            android:background="@color/edit_text"
            android:hint="Дата"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="@color/text_color_button"/>

        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateInput"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Время"
            android:inputType="time"
            android:padding="10dp"
            android:textColor="@color/text_color_button"/>

        <EditText
            android:id="@+id/placeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeInput"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Место"
            android:padding="10dp"
            android:textColor="@color/text_color_button"/>

        <EditText
            android:id="@+id/eventInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeInput"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:gravity="top"
            android:hint="Описание"
            android:lines="8"
            android:padding="10dp"
            android:textColor="@color/text_color_button"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventInput"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bottom_nav_bg"
            android:padding="10dp"
            android:text="Сохранить"
            android:textColor="@color/text_color_button"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>