<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/main_background"
    tools:context=".fragments.HomeFragment">



    <TextView
        android:id="@+id/roomNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/showRoomPanelButton"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text_color"
        android:textSize="18sp"/>


    <LinearLayout
        android:id="@+id/showRoomPanelButton"
        android:layout_width="41dp"
        android:layout_height="match_parent"
        android:background="@color/panel_background"
        android:orientation="vertical"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/showRoomPanelTextView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="К
            о
            м
            н
            а
            т
            ы"
            android:textColor="@color/text_color"
            android:textSize="18sp">

        </TextView>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/showRoomPanelButton"
        android:layout_above="@id/addButton"
        android:layout_below="@id/roomNameTextView" >

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/showRoomPanel"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/panel_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:id="@+id/roomScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/roomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/createRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/button_color"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:scaleType="fitStart"
            android:src="@drawable/ic_add_button"
            android:text="Создать"
            android:layout_margin="5sp"
            android:textColor="@color/text_color"
            android:textSize="20sp">

        </Button>
        <Button
            android:id="@+id/addRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/button_color"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:scaleType="fitStart"
            android:src="@drawable/ic_add_button"
            android:text="Добавить"
            android:layout_alignParentEnd="true"
            android:layout_margin="5sp"
            android:textColor="@color/text_color"
            android:textSize="20sp">
        </Button>
    </RelativeLayout>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:gravity="bottom"
        android:scaleType="fitStart"
        android:src="@drawable/ic_add_button"
        android:text="Добавить"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:tooltipText="text"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@id/dataPickerButton"/>

    <Button
        android:id="@+id/dataPickerButton"
        style="?android:spinnerStyle"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:layout_alignBottom="@id/showRoomPanelButton"
        android:layout_toEndOf="@id/showRoomPanelButton"
        android:layout_margin="10dp"/>



    <RelativeLayout
        android:id="@+id/createRoomPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/roomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Создание комнаты"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/backCreateRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomTextView"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/createNameRoom"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/roomTextView"
            android:layout_toRightOf="@id/backCreateRoomButton"
            android:background="@color/edit_text"
            android:ems="10"
            android:hint="Название комнаты"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/createPasswordRoom"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/createNameRoom"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/saveRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createPasswordRoom"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Создать"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addRoomPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/addRoomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Добавление комнаты"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/backAddRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addRoomTextView"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/addIdRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/backAddRoomButton"
            android:background="@color/edit_text"
            android:layout_below="@id/addRoomTextView"
            android:ems="10"
            android:digits="0123456789"
            android:hint="Номер комнаты"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/addPasswordRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addIdRoom"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/getRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addPasswordRoom"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Добавить"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createTaskPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/taskTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Создание задачи"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/backTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskTextView"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:editable="false"
            android:focusable="false"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/backTaskButton"
            android:background="@color/edit_text"
            android:layout_below="@id/taskTextView"
            android:hint="Дата"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/timeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTask"
            android:editable="false"
            android:focusable="false"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Время"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/nameTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTask"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@color/edit_text"
            android:hint="Название"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTask">

            <RelativeLayout
                android:id="@+id/pointsPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/panel_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/point0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/edit_text"
                    android:hint="Задача 1"
                    android:padding="10dp"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/addNewPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_alignEnd="@id/point0"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/button_color"
                    android:padding="10dp"
                    android:text="Добавить пункт"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/deletePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@id/addNewPoint"
                    android:backgroundTint="@color/button_color"
                    android:padding="10dp"
                    android:text="Удалить пункт"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/saveTaskButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/point0"
                    android:layout_alignStart="@id/point0"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/button_color"
                    android:padding="10dp"
                    android:text="Сохранить"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="visible"
        android:layout_toStartOf="@id/showRoomPanelButton"
        android:translationZ="1dp"/>

    <CalendarView
        android:id="@+id/mainCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="visible"
        android:layout_toStartOf="@id/showRoomPanelButton"
        android:translationZ="1dp"/>


    <RelativeLayout
        android:id="@+id/createEventPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/eventTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Создание события"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/backEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventTextView"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventTextView"
            android:layout_margin="10dp"
            android:editable="false"
            android:focusable="false"
            android:layout_toEndOf="@id/backEventButton"
            android:background="@color/edit_text"
            android:hint="Дата"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/timeEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateEvent"
            android:editable="false"
            android:focusable="false"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Время"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/placeEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeEvent"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Краткое описание"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/eventEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeEvent"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:gravity="top"
            android:hint="Полное описание"
            android:lines="8"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/saveEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventEvent"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Готово"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createImagePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/imageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Создание изображения"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/backImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTextView"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Назад"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dateImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTextView"
            android:layout_margin="10dp"
            android:editable="false"
            android:focusable="false"
            android:layout_toEndOf="@id/backImageButton"
            android:background="@color/edit_text"
            android:hint="Дата"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/timeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateImage"
            android:editable="false"
            android:focusable="false"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:hint="Время"
            android:padding="10dp"
            android:textColor="@color/text_color" />


        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/timeImage"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/chooseImageButton"/>

        <Button
            android:id="@+id/chooseImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeImage"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Выбрать"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/saveImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooseImageButton"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Готово"
            android:textColor="@color/text_color"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createUserPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/panel_background"
        android:visibility="gone"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/userTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:autoSizeMaxTextSize="20dp"
            android:text="Регистрация пользователя"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/loginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:maxLines="1"
            android:ems="10"
            android:hint="Логин"
            android:inputType="text"
            android:padding="10dp"
            android:layout_below="@+id/userTextView"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/passwordUser"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginUser"
            android:layout_margin="10dp"
            android:background="@color/edit_text"
            android:ems="10"
            android:hint="Пароль"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/saveUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordUser"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Зарегистрироваться"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
        <Button
            android:id="@+id/loginUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/saveUserButton"
            android:layout_below="@id/passwordUser"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_color"
            android:padding="10dp"
            android:text="Авторизоваться"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>